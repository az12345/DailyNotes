<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carpediemsolution.dailynotes">

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.carpediemsolution.dailynotes.app.App"
        android:icon="${appIcon}"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.carpediemsolution.dailynotes.itemslist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".newnote.AddNoteActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".newtask.AddTaskActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.carpediemsolution.dailynotes.utils.view.OpenImageActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.carpediemsolution.dailynotes.utils.view.UserSettingActivity"
            android:parentActivityName="com.carpediemsolution.dailynotes.itemslist.MainActivity" />
    </application>
</manifest>